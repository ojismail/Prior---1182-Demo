 <style>
    .input-filled {
      background-color: lightgreen;
    }
  </style>

<div class="py-20 pb-4 px-6 sm:py-32 lg:px-8">
  <div class="mx-auto max-w-2xl text-center">
    <p class="text-base font-semibold leading-7 text-teal-600">Best of heAIth</p>
    <p class="mt-2 text-4xl font-bold tracking-tight text-sky-900 sm:text-6xl">Log In</p>
    <p class="mt-6 text-lg leading-8 text-gray-600">Please enter all your relevant information below!</p>
  </div>

<div class="px-4 sm:px-8">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-field" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "input-field" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" style="margin-bottom: 2rem;">
    <%= button_tag(type: "submit", class: "block w-full mb-2 rounded-md bg-sky-800 py-2 px-3 text-center text-sm font-semibold text-white shadow-sm hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-800") do %>
      Log In
    <% end %>
    <%= button_tag(type: "button", class: "block w-full mb-2 rounded-md bg-sky-800 py-2 px-3 text-center text-sm font-semibold text-white shadow-sm hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-800", onClick: "location.href='#{new_user_registration_path}'") do %>
      Sign Up
    <% end %>
    <%= button_tag(type: "button", class: "block w-full rounded-md bg-sky-800 py-2 px-3 text-center text-sm font-semibold text-white shadow-sm hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-800", onClick: "location.href='#{new_password_path(resource_name)}'") do %>
      Forgot your password?
    <% end %><br />
</div>
<% end %>




<script>
  document.addEventListener('DOMContentLoaded', function() {
    var inputFields = document.querySelectorAll('.input-field');

    inputFields.forEach(function(inputField) {
      inputField.addEventListener('input', function() {
        if (inputField.value.trim() !== '') {
          inputField.classList.add('input-filled');
        } else {
          inputField.classList.remove('input-filled');
        }
      });
    });
  });
</script>
